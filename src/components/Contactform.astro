<section id="contact-scroll" class="bg-gray-300 py-16">
  <div
    class="container mx-auto px-4 flex flex-col md:flex-row items-stretch gap-8"
  >
    <!-- LEFT IMAGE -->
    <div class="hidden sm:block sm:w-full md:w-1/3">
      <img
        src="/images/footer2.jpeg"
        alt="Työntekijä katolla"
        class="w-full h-full object-cover rounded-lg shadow-lg"
      />
    </div>

    <!-- FORM -->
    <div
      class="w-full sm:w-full md:w-1/3 bg-white rounded-2xl shadow-xl p-8 flex flex-col"
    >
      <h2 class="font-bebas text-2xl text-center mb-6">Pyydä tarjous</h2>
      <form
        name="contact"
        netlify
        method="POST"
        action="/kiitos"
        class="flex-grow flex flex-col space-y-4"
      >
        <input type="hidden" name="form-name" value="contact" />

        <div>
          <label for="name" class="block text-sm font-medium text-gray-700"
            >Nimi</label
          >
          <input
            id="name"
            name="name"
            type="text"
            placeholder="Nimesi"
            required
            class="mt-1 block w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-brand focus:border-brand transition"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700"
            >Sähköposti</label
          >
          <input
            id="email"
            name="email"
            type="email"
            placeholder="Sähköpostisi"
            required
            class="mt-1 block w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-brand focus:border-brand transition"
          />
        </div>

        <div class="flex-grow">
          <label for="message" class="block text-sm font-medium text-gray-700"
            >Viesti</label
          >
          <textarea
            id="message"
            name="message"
            placeholder="Kerro lyhyesti tarpeestasi"
            required
            rows="5"
            class="mt-1 block w-full h-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-brand focus:border-brand transition resize-none"
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full bg-green-800 hover:bg-green-900 text-white font-bold text-lg py-4 rounded-full transition"
        >
          Lähetä
        </button>

        <p class="text-xs text-gray-500 mt-4 text-center">
          Ota yhteyttä Repton Oy:lle tällä lomakkeella – vastaamme ja toimitamme
          tarjouksen mahdollisimman pian.
        </p>
      </form>
    </div>

    <!-- RIGHT IMAGE -->
    <div class="hidden sm:block sm:w-full md:w-1/3">
      <img
        src="/images/footer3.jpeg"
        alt="Työntekijät katolla"
        class="w-full h-full object-cover rounded-lg shadow-lg"
      />
    </div>
  </div>
</section>
