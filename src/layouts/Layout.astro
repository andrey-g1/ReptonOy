---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="fi" class="scroll-smooth">
  <head>
    <!-- Organization Schema.org JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Maalausliike Repton Oy",
        "url": "https://www.repton.fi",
        "logo": "https://www.repton.fi/images/logo.png",
        "description": "Rakennus- ja maalauspalvelut Helsingissä, Uudellamaalla ja koko Suomessa.",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+358400944054",
          "contactType": "Customer Service",
          "areaServed": "FI",
          "availableLanguage": "Finnish"
        },
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Helsinki",
          "addressCountry": "FI"
        }
      }
    </script>

    <!-- Basic SEO + Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      Maalausliike Repton Oy | Rakennus- ja maalauspalvelut Helsingissä ja
      Suomessa
    </title>
    <meta
      name="description"
      content="Maalausliike Repton Oy tarjoaa ammattitaitoisia rakennus-, remontti- ja maalauspalveluja Helsingissä, Uudellamaalla ja Suomessa."
    />

    <!-- Favicon -->
    <link rel="icon" href="/images/logo.png" type="image/png" />

    <!-- Open Graph -->
    <meta
      property="og:title"
      content="Maalausliike Repton Oy | Rakennus- ja maalauspalvelut Suomessa"
    />
    <meta
      property="og:description"
      content="Maalausliike Repton Oy tarjoaa ammattitaitoisia rakennus- ja maalauspalveluja Helsingissä, Uudellamaalla ja Suomessa."
    />
    <meta property="og:image" content="/images/newbackground.jpg" />
    <meta property="og:url" content="https://www.repton.fi" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Maalausliike Repton Oy | Rakennus- ja maalauspalvelut Suomessa"
    />
    <meta
      name="twitter:description"
      content="Maalausliike Repton Oy tarjoaa ammattitaitoisia rakennus- ja maalauspalveluja Helsingissä, Uudellamaalla ja Suomessa."
    />
    <meta name="twitter:image" content="/images/church.jpg" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@400;500&family=Poppins:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/styles/tailwind.css" />

    <!-- Alpine.js (optional) -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>

    <!-- Loader‐hide script -->
    <script>
      window.addEventListener("load", () => {
        setTimeout(() => {
          const loader = document.getElementById("loading-screen");
          if (loader) loader.classList.add("opacity-0", "pointer-events-none");
        }, 600);
      });
    </script>
  </head>

  <body class="bg-gray-300 font-poppins">
    <!-- ─── FULLSCREEN LOADER ─── -->
    <div
      id="loading-screen"
      class="fixed inset-0 bg-white z-50 flex items-center justify-center gap-6
           transition-opacity duration-300"
    >
      <!-- always visible -->
      <img
        src="/images/logosvg.svg"
        alt="Repton Van 1"
        class="w-64 animate-drive"
      />

      <!-- hidden on phones, shows from sm upward -->
      <img
        src="/images/logosvg.svg"
        alt="Repton Van 2"
        class="hidden sm:inline w-64 animate-drive delay-200"
      />

      <!-- hidden on phones and tablets, shows from md upward -->
      <img
        src="/images/logosvg.svg"
        alt="Repton Van 3"
        class="hidden md:inline w-64 animate-drive delay-400"
      />
    </div>

    <!-- ─── YOUR ACTUAL SITE CONTENT ─── -->
    <Header />
    <main class="pt-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
